{
  "name": "test-11ty-dev-server",
  "version": "1.0.0",
  "description": "Testing NPM scripts with eleventy dev server",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf \"./dist\" \"./temp\"",
    "styles:dev": "sass --embed-source-map --source-map-urls=\"absolute\" \"./src/assets/scss/main.scss\" \"./temp/css/main.css\"",
    "styles:prod": "sass --no-source-map --style=\"compressed\" \"./src/assets/scss/main.scss\" \"./temp/css/main.css\"",
    "scripts:dev": "esbuild \"./src/assets/js/main.js\" --target=\"es6\" --bundle --outfile=\"./temp/js/main.bundle.js\"",
    "scripts:prod": "esbuild \"./src/assets/js/main.js\" --target=\"es6\" --bundle --minify --outfile=\"./temp/js/main.bundle.js\"",
    "eleventy:dev": "npx @11ty/eleventy --serve --incremental",
    "eleventy:prod": "npx @11ty/eleventy",
    "watch:styles": "onchange \"./src/assets/scss/**/*\" -- npm run styles:dev",
    "watch:scripts": "onchange \"./src/assets/js/**/*\" -- npm run scripts:dev",
    "dev": "npm-run-all --parallel eleventy:dev watch:*",
    "build": "npm-run-all clean --parallel eleventy:prod styles:prod scripts:prod"
  },
  "keywords": [
    "eleventy"
  ],
  "author": "Jérôme Coupé",
  "license": "UNLICENSED",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0-canary.29",
    "esbuild": "^0.15.5",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "rimraf": "^3.0.2",
    "sass": "^1.54.4"
  }
}
